<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow
                          http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">
	
	<input name="successView"/>
	<input name="previousView"/>
	
	<on-start>
			<evaluate expression="authenticationController.initializeForm()" result="flowScope.authenticationForm" />
	</on-start>

	<view-state id="authenticate" view="login" model="authenticationForm">	
		<binder>
			<binding property="username" required="true"/>
			<binding property="password" required="true"/>
		</binder>

		<transition on="authenticate" to="decideNext" >
			
			<evaluate expression="authenticationController.authenticate(flowScope.authenticationForm, externalContext, messageContext)"/>
		</transition>

		<transition on="previous" to="decidePrevious" bind="false"/>
	</view-state>

	<decision-state id="decidePrevious">
		<if test="previousView != null" then="redirectToPrevious" else="previous"/>
	</decision-state>

	<decision-state id="decideNext">
		<if test="successView != null" then="redirectToSuccessView" else="authenticationOk"/>
	</decision-state>
	
	<end-state id="redirectToPrevious" view="redirect:/{previousView}"/>	
	<end-state id="redirectToSuccessView" view="redirect:/{successView}"/>
	
	<end-state id="previous"/>
	<end-state id="authenticationOk"/>
</flow>	
	