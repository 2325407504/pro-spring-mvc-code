<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 2.1//EN" "http://tiles.apache.org/dtds/tiles-config_2_1.dtd">

<tiles-definitions>    
    <definition name="fullTemplate" template="/WEB-INF/templates/template.jspx">
        <put-attribute name="header" value="/WEB-INF/templates/header.jspx"/>
        <put-attribute name="footer" value="/WEB-INF/templates/footer.jspx"/>
    </definition>	

    <definition name="contentOnlyTemplate" template="/WEB-INF/templates/contentOnly.jspx">
    </definition>	

	<definition name="main" extends="fullTemplate">
        <put-attribute name="content" value="/WEB-INF/view/main.jspx"/>
    </definition>

	<definition name="show.selected.pizzas" template="/WEB-INF/view/selectPizzas.jspx">
        <put-attribute name="selectedPizzas" value="/WEB-INF/view/showSelectedPizzas.jspx"/>
    </definition>
    
	<definition name="selectPizzas" extends="fullTemplate">
        <put-attribute name="content" value="show.selected.pizzas"/>
    </definition>

	<definition name="selectShop" extends="fullTemplate">
        <put-attribute name="content" value="/WEB-INF/view/selectShop.jspx"/>
    </definition>
	
	<definition name="selectDeliveryOptions" extends="fullTemplate">
        <put-attribute name="content" value="/WEB-INF/view/selectDeliveryOptions.jspx"/>
    </definition>

	<definition name="login" extends="fullTemplate">
        <put-attribute name="content" value="/WEB-INF/view/login.jspx"/>
    </definition>

	<definition name="orderDetail" extends="contentOnlyTemplate">
		<put-attribute name="content" value="/WEB-INF/view/orderDetail.jspx"/>
	</definition>

    <definition name="ordersOverview" extends="fullTemplate">
    	<put-attribute name="content" value="/WEB-INF/view/ordersOverview.jspx">
		</put-attribute>
	</definition>

</tiles-definitions>
